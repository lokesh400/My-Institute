<html>
<head>
    <title>School Admin Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .sidebar-collapsed {
            width: 64px;
        }
        .sidebar-expanded {
            width: 256px;
        }
    </style>
</head>
<body class="bg-gray-100 font-roboto">
    <div class="flex flex-col min-h-screen">
        <header class="bg-green-600 text-white p-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold">School Admin Portal</h1>
            <button id="toggleSidebar" class="text-white focus:outline-none">
                <i class="fas fa-bars"></i>
            </button>
        </header>
        <div class="flex flex-1 flex-col md:flex-row">
            <aside id="sidebar" class="bg-gray-800 text-white sidebar-expanded md:sidebar-expanded p-4 transition-all duration-300">
                <nav class="space-y-4">
                    <a href="#" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="sidebar-text">Dashboard</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded">
                        <i class="fas fa-user-graduate"></i>
                        <span class="sidebar-text">Students</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <span class="sidebar-text">Teachers</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded">
                        <i class="fas fa-book"></i>
                        <span class="sidebar-text">Courses</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded">
                        <i class="fas fa-calendar-alt"></i>
                        <span class="sidebar-text">Timetable</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded">
                        <i class="fas fa-cogs"></i>
                        <span class="sidebar-text">Settings</span>
                    </a>
                </nav>
            </aside>
            <main class="flex-1 p-6">
                <div class="bg-white p-6 rounded-lg shadow-lg mb-6">
                    <h2 class="text-xl font-bold mb-4">Dashboard</h2>
                    <p>Welcome to the School Admin Portal. Use the sidebar to navigate through different sections.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg mb-6">
                    <h2 class="text-xl font-bold mb-4">Recent Activities</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white">
                            <thead>
                                <tr>
                                    <th class="py-2 px-4 border-b">Date</th>
                                    <th class="py-2 px-4 border-b">Activity</th>
                                    <th class="py-2 px-4 border-b">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="py-2 px-4 border-b">2023-10-01</td>
                                    <td class="py-2 px-4 border-b">New student registration</td>
                                    <td class="py-2 px-4 border-b">Completed</td>
                                </tr>
                                <tr>
                                    <td class="py-2 px-4 border-b">2023-10-02</td>
                                    <td class="py-2 px-4 border-b">Teacher meeting</td>
                                    <td class="py-2 px-4 border-b">Pending</td>
                                </tr>
                                <tr>
                                    <td class="py-2 px-4 border-b">2023-10-03</td>
                                    <td class="py-2 px-4 border-b">Course update</td>
                                    <td class="py-2 px-4 border-b">Completed</td>
                                </tr>
                                <tr>
                                    <td class="py-2 px-4 border-b">2023-10-04</td>
                                    <td class="py-2 px-4 border-b">Timetable adjustment</td>
                                    <td class="py-2 px-4 border-b">In Progress</td>
                                </tr>
                                <tr>
                                    <td class="py-2 px-4 border-b">2023-10-05</td>
                                    <td class="py-2 px-4 border-b">Parent-teacher conference</td>
                                    <td class="py-2 px-4 border-b">Scheduled</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h2 class="text-xl font-bold mb-4">Manage Students</h2>
                    <a href="#" class="inline-block bg-green-600 text-white py-2 px-4 rounded mb-4 hover:bg-green-700">
                        <i class="fas fa-plus"></i> Add New Student
                    </a>
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white">
                            <thead>
                                <tr>
                                    <th class="py-2 px-4 border-b">ID</th>
                                    <th class="py-2 px-4 border-b">Name</th>
                                    <th class="py-2 px-4 border-b">Class</th>
                                    <th class="py-2 px-4 border-b">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="py-2 px-4 border-b">1</td>
                                    <td class="py-2 px-4 border-b">John Doe</td>
                                    <td class="py-2 px-4 border-b">10A</td>
                                    <td class="py-2 px-4 border-b">
                                        <a href="#" class="text-blue-600 hover:text-blue-800"><i class="fas fa-edit"></i> Edit</a>
                                        <a href="#" class="text-red-600 hover:text-red-800 ml-4"><i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="py-2 px-4 border-b">2</td>
                                    <td class="py-2 px-4 border-b">Jane Smith</td>
                                    <td class="py-2 px-4 border-b">9B</td>
                                    <td class="py-2 px-4 border-b">
                                        <a href="#" class="text-blue-600 hover:text-blue-800"><i class="fas fa-edit"></i> Edit</a>
                                        <a href="#" class="text-red-600 hover:text-red-800 ml-4"><i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="py-2 px-4 border-b">3</td>
                                    <td class="py-2 px-4 border-b">Michael Johnson</td>
                                    <td class="py-2 px-4 border-b">11C</td>
                                    <td class="py-2 px-4 border-b">
                                        <a href="#" class="text-blue-600 hover:text-blue-800"><i class="fas fa-edit"></i> Edit</a>
                                        <a href="#" class="text-red-600 hover:text-red-800 ml-4"><i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="py-2 px-4 border-b">4</td>
                                    <td class="py-2 px-4 border-b">Emily Davis</td>
                                    <td class="py-2 px-4 border-b">12A</td>
                                    <td class="py-2 px-4 border-b">
                                        <a href="#" class="text-blue-600 hover:text-blue-800"><i class="fas fa-edit"></i> Edit</a>
                                        <a href="#" class="text-red-600 hover:text-red-800 ml-4"><i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="py-2 px-4 border-b">5</td>
                                    <td class="py-2 px-4 border-b">William Brown</td>
                                    <td class="py-2 px-4 border-b">8B</td>
                                    <td class="py-2 px-4 border-b">
                                        <a href="#" class="text-blue-600 hover:text-blue-800"><i class="fas fa-edit"></i> Edit</a>
                                        <a href="#" class="text-red-600 hover:text-red-800 ml-4"><i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script>
        document.getElementById('toggleSidebar').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('sidebar-collapsed');
            sidebar.classList.toggle('sidebar-expanded');
            document.querySelectorAll('.sidebar-text').forEach(element => {
                element.classList.toggle('hidden');
            });
        });
    </script>
</body>
</html>